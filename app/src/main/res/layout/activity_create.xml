<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity_Create">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@drawable/grad_bg"
        android:gravity="center"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/create_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/tvGrid"
            android:adjustViewBounds="true"

            android:scaleType="fitCenter"
            android:src="@drawable/ic_create_white" />

        <TextView
            android:id="@+id/tvGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="serif"
            android:text="Create a\nDiscussion"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom|center_horizontal"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Group name:"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etGroupName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg_black"
            android:fontFamily="sans-serif-light"
            android:inputType="text"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="51dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Group members:"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Add"
                android:textSize="15sp"
                android:background="@color/gradientStart"/>
            <ImageView
                android:id="@+id/ivAdd"
                android:layout_toRightOf="@id/tvAdd"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_person_add"
                android:background="@color/gradientStart"/>

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMember"
        android:paddingTop="10dp"
        android:paddingLeft="51dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="sans-serif-medium"
        android:text="Derrick\nJohn\nJess"
        android:layout_weight="2" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@color/black"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:text="Create"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>