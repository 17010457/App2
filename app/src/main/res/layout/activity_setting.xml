<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".Activity_Settings">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:title="Settings"
        app:titleTextColor="@color/white"
        android:layout_marginBottom="80dp"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:text="Turn On Notifications" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_2"
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="Chat Backup"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_3"
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:layout_marginTop="1dp"
        android:paddingRight="25dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="Save media"/>
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_4"
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:layout_marginTop="1dp"
        android:paddingRight="25dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:text="Battery Saving Mode"/>


</LinearLayout>